<FrameLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <ProgressBar
            android:id="@id/loadingView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:indeterminate="true"/>
    <TextView
            android:id="@id/errorView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    <android.support.design.widget.CoordinatorLayout
            android:id="@id/contentView"
            android:saveEnabled="false"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <android.support.design.widget.AppBarLayout
                android:id="@+id/info_appbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <android.support.design.widget.CollapsingToolbarLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:layout_scrollFlags="scroll|exitUntilCollapsed|snap">
                <LinearLayout
                        android:id="@+id/info_avatar_text"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_234sdp"
                        android:layout_marginBottom="@dimen/_28sdp"
                        android:background="?attr/colorPrimary"
                        android:gravity="bottom|center_horizontal"
                        android:orientation="vertical"
                        app:layout_collapseMode="parallax"
                        app:layout_collapseParallaxMultiplier="0.3">
                    <TextView
                            android:id="@+id/info_avatar_text_title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:maxLines="1"
                            android:textColor="@android:color/white"
                            android:textSize="30sp"/>
                    <TextView
                            android:id="@+id/info_avatar_text_subtitle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_4sdp"
                            android:maxLines="1"
                            android:textColor="@android:color/white"/>
                </LinearLayout>
            </android.support.design.widget.CollapsingToolbarLayout>
        </android.support.design.widget.AppBarLayout>

        <android.support.v4.widget.NestedScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scrollbars="none"
                app:behavior_overlapTop="@dimen/_28sdp"
                app:layout_behavior="@string/appbar_scrolling_view_behavior">
            <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/_8sdp"
                    app:cardElevation="8dp"
                    app:contentPadding="16dp">
                <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                    <LinearLayout
                            android:gravity="center_vertical"
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="48dp"
                            android:id="@+id/info_bio">
                        <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="16dp"
                                android:src="@drawable/ic_bio_24dp"/>
                        <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                                android:id="@+id/info_bio_text"/>
                    </LinearLayout>
                    <LinearLayout
                            android:gravity="center_vertical"
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="48dp"
                            android:id="@+id/info_company">
                        <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="16dp"
                                android:src="@drawable/ic_company_24dp"/>
                        <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                                android:id="@+id/info_company_text"/>
                    </LinearLayout>
                    <LinearLayout
                            android:gravity="center_vertical"
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="48dp"
                            android:id="@+id/info_location">
                        <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="16dp"
                                android:src="@drawable/ic_location_24dp"/>
                        <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                                android:id="@+id/info_location_text"/>
                    </LinearLayout>
                    <LinearLayout
                            android:gravity="center_vertical"
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="48dp"
                            android:id="@+id/info_blog">
                        <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="16dp"
                                android:src="@drawable/ic_blog_24dp"/>
                        <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                                android:id="@+id/info_blog_text"/>
                    </LinearLayout>
                    <LinearLayout
                            android:gravity="center_vertical"
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="48dp"
                            android:id="@+id/info_email">
                        <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="16dp"
                                android:src="@drawable/ic_email_24dp"/>
                        <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                                android:autoLink="email"
                                android:id="@+id/info_email_text"/>
                    </LinearLayout>
                </LinearLayout>
            </android.support.v7.widget.CardView>
        </android.support.v4.widget.NestedScrollView>

        <android.support.v7.widget.Toolbar
                android:id="@+id/info_toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:background="?attr/colorPrimary"
                app:layout_anchor="@id/info_avatar_text"
                app:layout_anchorGravity="center_vertical">
            <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="horizontal" >
                <Space
                        android:layout_width="32dp"
                        android:layout_height="match_parent"/>
                <TextView
                        android:id="@+id/info_bar_title"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/_8sdp"
                        android:gravity="center_vertical"
                        android:maxLines="1"
                        android:textColor="@android:color/white"
                        android:textSize="20sp"/>
            </LinearLayout>
        </android.support.v7.widget.Toolbar>

        <ImageView
                android:id="@+id/info_avatar"
                android:layout_width="@dimen/_128sdp"
                android:layout_height="@dimen/_128sdp"
                android:layout_gravity="center_horizontal"
                app:finalHeight="32dp"
                app:layout_behavior="ru.geekbrains.gviewer.util.AvatarBehavior" />
    </android.support.design.widget.CoordinatorLayout>
</FrameLayout>